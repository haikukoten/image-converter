{
  "version": 2,
  "builds": [
    { "src": "web-app/**/*.html", "use": "@vercel/static" },
    { "src": "blog/**/*.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/blog/(.*)", "dest": "/blog/$1" },
    { "src": "/(?!blog)(.*)", "dest": "/web-app/$1" },
    { "handle": "filesystem" }
  ]
}
